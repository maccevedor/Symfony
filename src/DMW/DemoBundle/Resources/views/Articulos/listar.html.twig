{% extends '::base.html.twig' %}
{% block body %}
<h1>Listado de Articulos</h1>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Titulo</th>
        <th>Autor</th>
        <th>Fecha de Creacion</th>
        <th>Enviar</th>
    </tr>
    {% for articulo in articulos %}
    <tr>
        <td>{{ articulo.id }}</td>
        <td>{{ articulo.title }}</td>
        <td>{{ articulo.author }}</td>
        <td>{{ articulo.created | date('d-m-Y') }}</td>
        <td><input type="button" name="enviar" value="enviar"></td>
    </tr>
    {% endfor %}
</table>
{% endblock %}